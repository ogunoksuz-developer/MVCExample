@model WebApplication2.Models.Entity.Kullanicilar
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/login.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper fadeInDown">
        <div id="formContent">
            @ViewBag.Mesaj
            @using (Html.BeginForm("Login","Security",FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Ad, new { @class = "fadeIn second", placeholder = "Kullanıcı Adı" })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Sifre, new { @class = "fadeIn third", placeholder = "Şifre" })
                </div>
                <input type="submit" class="fadeIn fourth" value="Giriş">
            }
            <div id="formFooter">
                <a class="underlineHover" href="#">Parolamı Unuttum</a>
            </div>

        </div>
    </div>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
</body>
</html>
